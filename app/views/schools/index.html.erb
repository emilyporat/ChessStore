<% if @schools.empty? %>
  <h4>No schools at this time.</h4>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Name</th>
        <th width="150">Street</th>
        <th width="150">City</th>
        <th width="150">State</th>
        <th width="150">Zip</th>
        <% if current_user.role == "admin" %>
          <th width="100"></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @schools.each do |s| %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.street_1 %></td>
          <td><%= s.city %></td>
          <td><%= s.state %></td>
          <td><%= s.zip %></td>
          <% if current_user.role == "admin" %>
            <td><%= link_to image_tag("edit.png"), edit_school_path(s) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= will_paginate @schools %>
<p>&nbsp;</p>