<div id = "update_item_price_form">
	<%= simple_form_for @item_price, html: { class: 'form-horizontal', multipart: true } do |f| %>

	    <%= f.input :price, label: false, input_html: {class: "avg"} %>
	    <%= f.input :item_id, as: :hidden, input_html: { value: params[:item_id] } %>
	    <%= f.input :category, as: :hidden, input_html: { value: params[:category] } %>

	    <div class="form-actions">
	      <%= f.submit nil, :class => 'tiny button radius' %>
	      <%= link_to 'Cancel', request.referrer, :class => 'tiny button alert radius' %>
	    </div>
	<% end %>
</div>