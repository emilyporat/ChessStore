<%= simple_form_for @credit_card, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Credit Card </legend>

    <%= f.input :number, wrapper_html: { class: 'm6 s12' } %>  
    <%= f.input :expiration_month, wrapper_html: { class: 'm6 s12' } %> 
    <%= f.input :expiration_year, wrapper_html: { class: 'm6 s12' } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button tiny radius' %>
      <%= link_to 'Cancel', new_order_path, :class => 'button tiny alert radius' %>
    </div>
  </fieldset>
<% end %>