<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User </legend>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, as: :hidden, input_html: { value: "customer" } %>
    <%= f.input :active, as: :hidden, input_html: { value: true } %>
  </fieldset>
 
  <div class="form-actions">
    <%= f.submit nil, class: 'button' %>
    <% if !logged_in? %>
      <%= link_to 'Cancel', home_path, :class => 'button secondary' %>
    <% else %>
      <% if current_user.role == "customer" or current_user.role == "shipper" %>
        <%= link_to 'Cancel', profile_path, :class => 'button secondary' %>
      <% else %>
        <%= link_to 'Cancel', users_path, :class => 'button secondary' %>
      <% end %>
    <% end %>
  </div>
  
<% end %>  