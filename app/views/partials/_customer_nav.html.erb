<div class="contain-to-grid">
  <nav class="top-bar" data-topbar role="navigation"> 
    <section class="top-bar-section">
      <ul class="left">
        <!-- Chess store title -->
        <li>
        <!-- <div id="title_area"> -->
         <%= link_to image_tag('chess_store_title.png'), home_path %>
        <!-- </div> -->
        </li>

        <!-- link to home -->
        <li><%= link_to "Home", home_path %></li>

        <!-- options for items -->
        <li class="has-dropdown">
          <%= link_to "Items", items_path %>
          <ul class="dropdown">
            <li><%= link_to "Boards", boards_path %></li>
            <li><%= link_to "Pieces", pieces_path %></li>
            <li><%= link_to "Clocks", clocks_path %></li>
            <li><%= link_to "Supplies", supplies_path %></li>
          </ul>
